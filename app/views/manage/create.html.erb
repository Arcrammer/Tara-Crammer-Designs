<% content_for :head do %>
  <%= stylesheet_link_tag "posts.css" %>
  <%= javascript_include_tag "tinymce/tinymce.min.js" %>
  <%= javascript_include_tag "" %>
<% end %>
<%= render "partials/navigation_bar" %>
<h1>New Post</h1>
<div class="container">
  <%= form_for :blog_post do |builder| %>
    <%= builder.text_area :title, :class => 'post-header post-title white-background', :placeholder => 'Title' %><br />
    <%= builder.text_area :body, :class => 'post-content', :placeholder => 'Body', :id => 'post-body' %><br />
    <div class="column">
      <h6 class="post-image-title">Header Image:</h6>
      <%= builder.file_field :header_image, :class => 'post-image' %><br />
    </div> <!-- .column -->
    <div class="column">
      <%= builder.text_field :tags, :class => 'post-tags white-background', :placeholder => 'Tags', :autocomplete => 'off' %><br />
    </div> <!-- .column -->
    <%= builder.submit :submit_button, :value => 'Post', :class => 'btn' %>
  <% end %>
</div> <!-- .container -->
<!-- Scripts -->
<script>
  tinymce.init({
    "file_browser_callback": function (field_name, url, type, win) {
        win.document.getElementById(field_name).value = 'my browser value'; 
      },
    "height":"525px",
    "menubar": false,
    "plugins": [
      "link image searchreplace fullscreen media contextmenu"
    ],
    "resize":false,
    "selector":"#post-body",
    "statusbar":false,
    "toolbar": ["undo redo | styleselect | bold italic | link image | alignleft aligncenter jbimages alignright"]
  });
</script>
<%= render "partials/short_footer" %>
